# Cluster name (NSC, ARNES or LEVANTE)
  CLUSTER_NAME : ARNES

# GLEMOS directory (full path)
  GLEMOS_DIR : {HOME}/GLEMOS_Workspace/GLEMOS

# Data Directory
  DATA_PATH : {CLUSTER_DATA_ROOT}/InputData

# Meteorological data path
  METEO_PATH : {DATA_PATH}/MeteoData/Processed

# Path to data on chemical reactants
  REACT_PATH : {DATA_PATH}/ReactData/Processed

# Boundary conditions path (only used in regional simulations)
  BOUND_COND_PATH : {DATA_PATH}/BC

# Initial conditions path (only used if run mode set to "cond")
  INIT_COND_PATH : {DATA_PATH}/InitCond

#***********************************************************************************************************************************************************#

# output formation mode (options : auto/file)
  OUTPUT_FORM_MODE : file

# 6hourly output for further calculation of boundary conditions (options: on/off)
  OUTPUT_FOR_BOUND : off

# Run directory path 
  RUN_DIR_PATH : {CLUSTER_DATA_ROOT}/Simulations/GLEMOS_testing

# Run directory suffix
  RUN_DIR_SUFF : _run

